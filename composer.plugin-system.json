{

    
    "name": "fa/plugin-system",
    "description": "Modular plugin system for PHP applications with dependency injection",
    "type": "library",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "FA Development Team",
            "email": "dev@frontaccounting.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "FA\\Plugins\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FA\\Plugins\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyze"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}